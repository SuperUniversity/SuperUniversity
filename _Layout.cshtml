            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <a href="#portfolio">模塊</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#about">關於</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#contact">聯絡我們</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <section  id="">
        <div class="container">
                    <p>@RenderBody()</p>
        </div>
    </section>

    <footer id="footer1" class="text-center">
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; 超屌課程表 2016
                    </div>
                </div>
            </div>
        </div>
    </footer>

